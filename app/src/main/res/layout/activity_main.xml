<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btnaction"
                android:layout_marginTop="24dp"
                android:layout_width="48dp"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:drawableStart="@drawable/action"/>

        <EditText
                android:id="@+id/edtcari"
                android:layout_width="240dp"
                android:layout_marginTop="24dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:hint="Cari Tempat"
                android:textColorHint="#CCCCCC"
                android:textColor="#000000"
                android:inputType="text"
                android:imeOptions="actionDone"/>

        <Button
                android:background="#FFFFFF"
                android:id="@+id/btncari"
                android:layout_marginTop="24dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableStart="@drawable/cari"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

        <Button
                android:layout_width="184dp"
                android:layout_height="match_parent"
                android:id="@+id/txtmobil"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/mobil"
                android:text="Mobil"/>

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txts"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/sp"
                android:text="Sepeda Motor"/>

    </LinearLayout>
    </LinearLayout>
    <Button
            android:id="@+id/btngps"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/gps"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    <Spinner
            android:layout_marginTop="16dp"
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>

